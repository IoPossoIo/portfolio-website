.window-xp, .window-xp-widget {
  position: absolute;
  border: 1px solid #A0A0A0; /* Light gray border instead of blue */
  background: #ECE9D8;
  opacity: 0; /* Start hidden, will be shown by JS */
  transition: opacity 0.2s ease; /* Smooth fade in */
  box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3), 0 0 0 1px rgba(255, 255, 255, 0.8) inset; /* XP-style drop shadow */
  z-index: 2000; /* Ensure above gradients, wallpaper and folders */
  font-family: 'WindowsXPTahoma', Tahoma, 'Segoe UI', Verdana, sans-serif;
  font-size: 14px; /* Increased from default for better readability */
  min-width: 280px;
  border-radius: 0; /* Remove rounded corners for authentic XP look */
  overflow: hidden;
  transition: box-shadow 0.2s ease; /* Remove transform transition to avoid snap */
  pointer-events: auto; /* Allow interaction even if parent disables pointer events */
  transform-origin: center center; /* Prevent jump when animating scale */
  will-change: transform; /* Hint to browser for smoother anim */
  
  &:hover {
    box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4), 0 6px 15px rgba(0, 0, 0, 0.2);
    /* Avoid any translate on hover to prevent auto-moving feel */
    transform: none;
  }

  .title-bar {
    background: linear-gradient(to bottom, #0055E7 0%, #245edb 50%, #003A9E 100%);
    border-bottom: 1px solid #808080;
    color: white;
    padding: 4px 6px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: move;
    height: 24px;
    border-radius: 0;
    box-shadow: inset 0 1px 0 rgba(255,255,255,0.2);

    .title-bar-text {
      font-weight: bold;
      font-size: 16px; /* Bigger title bar text */
      text-shadow: 1px 1px 1px rgba(0,0,0,0.3);
    }

    .title-bar-controls {
      display: flex;
      gap: 2px;
      
      button {
        background: linear-gradient(to bottom, #F0F0F0, #D4D0C8);
        border: 1px outset #D4D0C8;
        width: 16px;
        height: 14px;
        font-size: 8px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        
        &:hover {
          background: linear-gradient(to bottom, #F8F8F8, #E0E0E0);
        }
        
        &:active {
          border: 1px inset #D4D0C8;
          background: #D4D0C8;
        }
      }
    }
  }

  .window-body {
    padding: 16px;
    background: #ECE9D8;
    border: 1px inset #D4D0C8;
    margin: 2px;
    font-size: 18px; /* Bigger window body text */
    line-height: 1.5;
    color: #000;
  }
}

