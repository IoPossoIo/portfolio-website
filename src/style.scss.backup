@font-face {
  font-family: 'San Francisco';
  src: url('../fonts/san-francisco.woff2') format('woff2'), /* Adjust the file extension if necessary */
       url('../fonts/san-francisco.woff') format('woff'); /* Add other formats if available */
  font-weight: normal;
  font-style: normal;
}

/* Route-based visibility controls to prevent lingering artifacts */
body.route-home {
  .gradient-bg {
    background: none !important; /* remove base gradient so only wallpaper shows */
  }
  /* keep gradients container visible on home */
  .g1, .g2, .g3, .g4, .g5, .interactive {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
  }
  .gradient-bg svg { display: none !important; }
}

body.route-nonhome {
  .gradient-bg {
    background: linear-gradient(40deg, var(--color-bg1), var(--color-bg2)) !important;
  }
  .gradients-container,
  .g1, .g2, .g3, .g4, .g5, .interactive {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  .gradient-bg svg { display: block !important; }
}

@font-face {
  font-family: 'SF Pro Display';
  src: url('../fonts/SF-Pro-Display-Medium.otf') format('opentype'); /* Load the OTF font */
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Baskerville';
  src: url('/fonts/BASKVILL.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

/* Windows XP Tahoma font */
@font-face {
  font-family: 'WindowsXPTahoma';
  src: url('/windows-update/windows-xp-tahoma.otf') format('opentype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}

// Custom cursor styles
// Use the SAME hotspot on root and interactive elements to prevent pointer jump on hover
html {
  /* Adjust hotspot to match index finger tip of the hand cursor */
  cursor: url('https://static.cargo.site/images/up.png') 5 0, auto !important;
}

a, button, .interactive-element, .nav-item, .folder, .back-arrow {
  /* Same hotspot for clickable elements */
  cursor: url('https://static.cargo.site/images/up.png') 5 0, pointer !important;
  position: relative; /* Ensure cursor works properly on these elements */
}

/* Style for Cat GIF and Learn More buttons */
#btnGenCat, .cat-gif-button,
.learn-more-btn, .btn-learn-more {
  border: 1px solid #7B7B7B !important;
  background: #E0E0E0 !important;
  box-shadow: inset -1px -1px 0 0 #0A0A0A, inset 1px 1px 0 0 #FFFFFF !important;
  transition: all 0.1s ease;
}

#btnGenCat:active, .cat-gif-button:active,
.learn-more-btn:active, .btn-learn-more:active {
  box-shadow: inset 1px 1px 0 0 #0A0A0A, inset -1px -1px 0 0 #FFFFFF !important;
  background: #D3D3D3 !important;
}

body {
  margin: 0;
  padding: 0;
  overflow: hidden; // Prevent scrolling
  position: fixed; // Force fixed position
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom right, #F5F5F5, #E0E0E0); // Your gradient
  font-family: 'Baskerville', serif; /* Set default font for the body */

  @media screen and (max-width: 768px) {
    background: #F5F5DC !important; // Beige background for mobile
    // Or use the exact color from your design:
    // background: #E8E6D9 !important;
  }
}

.content {
  position: fixed;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.text-container {
  z-index: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  justify-content: center;
  align-items: center;
  font-size: 96px;
  color: white;
  opacity: 0.8;
  user-select: none;
  text-shadow: 1px 1px rgba(0,0,0,0.1);
}

:root {
  --color-bg1: rgb(240, 230, 210);
  --color-bg2: rgb(255, 245, 230);
  --color1: 156, 175, 136;
  --color2: 138, 189, 145;
  --color3: 154, 199, 145;
  --color4: 192, 199, 145;
  --color5: 169, 189, 147;
  --color-interactive: 156, 175, 136;
  --circle-size: 80%;
  --blending: hard-light;
}

@keyframes moveInCircle {
  0% {
    transform: rotate(0deg);
  }
  50% {
    transform: rotate(180deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

@keyframes moveVertical {
  0% {
    transform: translateY(-50%);
  }
  50% {
    transform: translateY(50%);
  }
  100% {
    transform: translateY(-50%);
  }
}

@keyframes moveHorizontal {
  0% {
    transform: translateX(-50%) translateY(-10%);
  }
  50% {
    transform: translateX(50%) translateY(10%);
  }
  100% {
    transform: translateX(-50%) translateY(-10%);
  }
}

.gradient-bg {
  width: 100vw;
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: flex-start;
  overflow: hidden;
  z-index: 1;
  background: linear-gradient(40deg, var(--color-bg1), var(--color-bg2));

  svg {
    position: fixed;
    top:0;
    left:0;
    width: 0;
    height: 0;
  }

  .gradients-container {
    filter: url(#goo) blur(40px);
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* Interactive star field */
  .star-field {
    position: absolute;
    inset: 0;
    z-index: 1; /* Above wallpaper, below folders */
    pointer-events: none;
    overflow: hidden;
  }
  
  .star {
    position: absolute;
    width: 4px;
    height: 4px;
    background: radial-gradient(circle, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.8) 40%, transparent 70%);
    animation: twinkle 3s ease-in-out infinite;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    &::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 1px;
      height: 12px;
      background: linear-gradient(to bottom, transparent, rgba(255, 255, 255, 0.8), transparent);
    }
    
    &::after {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 12px;
      height: 1px;
      background: linear-gradient(to right, transparent, rgba(255, 255, 255, 0.8), transparent);
    }
    
    &.large {
      width: 6px;
      height: 6px;
      filter: blur(0.5px);
      box-shadow: 0 0 15px rgba(255, 255, 255, 0.9),
                  0 0 30px rgba(255, 255, 255, 0.6),
                  0 0 45px rgba(255, 255, 255, 0.3);
      
      &::before { height: 16px; }
      &::after { width: 16px; }
    }
    
    &.medium {
      width: 4px;
      height: 4px;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.8),
                  0 0 20px rgba(255, 255, 255, 0.5);
    }
    
    &.small {
      width: 2px;
      height: 2px;
      opacity: 0.9;
      box-shadow: 0 0 6px rgba(255, 255, 255, 0.7);
      
      &::before { height: 8px; width: 0.5px; }
      &::after { width: 8px; height: 0.5px; }
    }
    
    &.cursor-near {
      transform: scale(1.5);
      filter: brightness(2) blur(0.3px);
      box-shadow: 0 0 25px rgba(255, 255, 255, 1),
                  0 0 50px rgba(255, 255, 255, 0.8),
                  0 0 75px rgba(255, 255, 255, 0.5);
    }
    
    &.shooting {
      animation: shootingStar 2s ease-out forwards;
      filter: brightness(3);
      
      &::before, &::after {
        display: none;
      }
    }
  }
  
  @keyframes twinkle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }
  
  @keyframes shootingStar {
    0% {
      transform: translateX(-100px) translateY(-100px) scale(1);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateX(200px) translateY(200px) scale(0);
      opacity: 0;
    }
  }

  /* Static wallpaper layer for main page */
  .wallpaper-layer {
    position: absolute;
    inset: 0;
    z-index: 0; /* Keep behind folders and gradients */
    background-image: url('/windows-update/portfolio-bg.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    pointer-events: none;
  }

  /* A reveal layer that morphs around the pointer, masking an alternate background */
  .reveal-layer {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 2;
    /* Main-page wallpaper to reveal */
    background-image: url('/windows-update/portfolio-bg.jpg');
    background-size: cover;
    background-position: center;
    /* Mask follows the mouse position via CSS variables --mx/--my */
    --mx: 50%;
    --my: 50%;
    -webkit-mask-image: radial-gradient(120px 120px at var(--mx) var(--my), rgba(0,0,0,0.95) 40%, rgba(0,0,0,0) 75%);
            mask-image: radial-gradient(120px 120px at var(--mx) var(--my), rgba(0,0,0,0.95) 40%, rgba(0,0,0,0) 75%);
    -webkit-mask-repeat: no-repeat;
            mask-repeat: no-repeat;
    transition: -webkit-mask-image 120ms ease-out, mask-image 120ms ease-out;
  }
  
  .g1, .g2, .g3, .g4, .g5 {
    z-index: 10;
    position: absolute;
    pointer-events: auto;
    width: var(--circle-size);
    height: var(--circle-size);
    background: radial-gradient(circle at center, rgba(178, 34, 34, 0.8) 0, rgba(178, 34, 34, 0) 50%) no-repeat;
    will-change: transform, opacity;
  }
  .g1 {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color1), 0.8) 0, rgba(var(--color1), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: var(--circle-size);
    height: var(--circle-size);
    top: calc(50% - var(--circle-size) / 2);
    left: calc(50% - var(--circle-size) / 2);

    transform-origin: center center;
    animation: moveVertical 30s ease infinite;

    opacity: 1;
  }

  .g2 {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color2), 0.8) 0, rgba(var(--color2), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: var(--circle-size);
    height: var(--circle-size);
    top: calc(50% - var(--circle-size) / 2);
    left: calc(50% - var(--circle-size) / 2);

    transform-origin: calc(50% - 400px);
    animation: moveInCircle 20s reverse infinite;

    opacity: 1;
  }

  .g3 {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color3), 0.8) 0, rgba(var(--color3), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: var(--circle-size);
    height: var(--circle-size);
    top: calc(50% - var(--circle-size) / 2 + 200px);
    left: calc(50% - var(--circle-size) / 2 - 500px);

    transform-origin: calc(50% + 400px);
    animation: moveInCircle 40s linear infinite;

    opacity: 1;
  }

  .g4 {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color4), 0.8) 0, rgba(var(--color4), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: var(--circle-size);
    height: var(--circle-size);
    top: calc(50% - var(--circle-size) / 2);
    left: calc(50% - var(--circle-size) / 2);

    transform-origin: calc(50% - 200px);
    animation: moveHorizontal 40s ease infinite;

    opacity: 0.7;
  }

  .g5 {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color5), 0.8) 0, rgba(var(--color5), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: calc(var(--circle-size) * 2);
    height: calc(var(--circle-size) * 2);
    top: calc(50% - var(--circle-size));
    left: calc(50% - var(--circle-size));

    transform-origin: calc(50% - 800px) calc(50% + 200px);
    animation: moveInCircle 20s ease infinite;

    opacity: 1;
  }

  .interactive {
    position: absolute;
    background: radial-gradient(circle at center, rgba(var(--color-interactive), 0.8) 0, rgba(var(--color-interactive), 0) 50%) no-repeat;
    mix-blend-mode: var(--blending);

    width: 100%;
    height: 100%;
    top: -50%;
    left: -50%;

    opacity: 0.7;
  }

  @media screen and (max-width: 768px) {
    background: #F5F5DC !important; // Same beige color
    // Or:
    // background: #E8E6D9 !important;
  }
}

.logo-container {
  position: absolute;
  top: 20px;
  left: 20px;
  z-index: 10;
  background-color: transparent;

  .logo {
    width: 100px;
    height: auto;
    transition: opacity 0.3s ease;
    position: absolute;
    top: 0;
    left: 0;
    animation: spin 10s linear infinite;
  }

  .white {
    opacity: 0;
  }
}

