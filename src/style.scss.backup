  color: #000;
  padding: 12px 16px;
  position: relative;
  word-wrap: break-word;
  line-height: 1.4; /* Better text spacing */

  /* Bottom-left speech tail that points to Clippy, with black outline */
  &::before {
    content: '';
    position: absolute;
    bottom: -20px; /* tail outside bubble */
    left: 40px; /* adjust alignment with Clippy */
    border-width: 20px 15px 0 15px;
    border-style: solid;
    border-color: #000 transparent transparent transparent; /* black outline */
    width: 0; height: 0;
    z-index: 10000;
  }
  &::after {
    content: '';
    position: absolute;
    bottom: -18px; /* slightly above outline */
    left: 42px;
    border-width: 18px 13px 0 13px;
    border-style: solid;
    border-color: #FFFFE1 transparent transparent transparent; /* match bubble colour */
    width: 0; height: 0;
    z-index: 10001;
  }

  .title-bar {
    background: linear-gradient(to bottom, #0055E7 0%, #245edb 50%, #003A9E 100%) !important;
    border-radius: 0 !important;
  }

  .window-body {
    background: #ECE9D8 !important;
    border: 1px inset #D4D0C8 !important;
    font-size: 15px !important;
    padding: 16px !important;
  }
}

/* Speech bubble tail pointing to Clippy */
.clippy-bubble::before {
  content: '';
  position: absolute;
  bottom: -20px;
  right: 40px;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 20px 15px 0 15px;
  border-color: #000 transparent transparent transparent;
  z-index: 10000;
}

.clippy-bubble::after {
  content: '';
  position: absolute;
  bottom: -18px;
  right: 42px;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 18px 13px 0 13px;
  border-color: #FFFFE1 transparent transparent transparent;
  z-index: 10001;
}

@keyframes dialogueFloat {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-3px) rotate(0.5deg); }
  50% { transform: translateY(-6px) rotate(0deg); }
