  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-5px); }
}

.clippy-bubble {
  width: 320px;
  max-width: calc(100vw - 120px); /* Leave space for Clippy */
  position: fixed !important; /* Completely independent positioning */
  bottom: 124px !important; /* Above Clippy (Clippy is at bottom: 16px) - moved up by 4px */
  right: 116px !important; /* Left of Clippy (Clippy is at right: 16px) - moved left by 4px */
  transform: none !important; /* No transform needed */
  animation: dialogueFloat 4s ease-in-out infinite;
  pointer-events: auto; /* Allow clicking inside bubble */
  z-index: 2201; /* Above Clippy */
  /* Remove any flex ordering since it's now independent */
  order: unset !important;

  /* Match XP window look */
  background: #FFFFE1 !important; /* Classic XP yellow speech bubble */
  border: 1px solid #000 !important; /* Black outline like XP */
  border-radius: 12px !important; /* More rounded for cartoonish look */
  box-shadow: 2px 2px 8px rgba(0,0,0,0.3), 0 0 0 1px rgba(255,255,255,0.8) inset !important;
