/* Rainbow gradient text effect - NO BLACK BASE, using text-shadow */
.rainbow-professional {
  font-family: 'Comic Sans MS', 'Comic Sans', cursive !important;
  font-size: 1.1em !important;
  font-weight: bold !important;
  font-style: italic !important;
  color: #ff0000 !important;
  text-shadow:
    0px 0px 0px #ff0000,
    1px 1px 0px #ff7f00,
    2px 2px 0px #ffff00,
    3px 3px 0px #00ff00,
    4px 4px 0px #0000ff,
    5px 5px 0px #4b0082,
    6px 6px 0px #9400d3 !important;
  display: inline-block;
  position: relative !important;
  z-index: 100 !important;
  animation: rainbow-shadow 2s ease infinite !important;
  background: linear-gradient(45deg, #ff0000, #ff7f00, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3) !important;
  -webkit-background-clip: text !important;
  background-clip: text !important;
  -webkit-text-fill-color: transparent !important;
  color: transparent !important;
}

/* Individual bouncing letters */
.bounce-letter {
  display: inline-block;
  animation: letterBounce 2.5s ease-in-out infinite;
  animation-delay: var(--delay);
}

/* Bouncing animation for letters */
@keyframes letterBounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) scale(1);
  }
  40% {
    transform: translateY(-8px) scale(1.1);
  }
  60% {
    transform: translateY(-4px) scale(1.05);
  }
}

/* Fallback for browsers that don't support advanced text-shadow */
@supports not (text-shadow: 1px 1px 0px #ff7f00) {
  .rainbow-professional {
    background: linear-gradient(45deg, #ff0000, #ff7f00, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3) !important;
    -webkit-background-clip: text !important;
    background-clip: text !important;
    -webkit-text-fill-color: transparent !important;
    color: transparent !important;
    /* Simple fallback - rainbow gradient text */
  }
}

/* Rainbow shadow animation */
@keyframes rainbow-shadow {
  0% {
    background: linear-gradient(45deg, #ff0000, #ff7f00, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  16% {
    background: linear-gradient(45deg, #ff7f00, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3, #ff0000);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  33% {
    background: linear-gradient(45deg, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3, #ff0000, #ff7f00);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  50% {
    background: linear-gradient(45deg, #00ff00, #0000ff, #4b0082, #9400d3, #ff0000, #ff7f00, #ffff00);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  66% {
    background: linear-gradient(45deg, #0000ff, #4b0082, #9400d3, #ff0000, #ff7f00, #ffff00, #00ff00);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  83% {
    background: linear-gradient(45deg, #4b0082, #9400d3, #ff0000, #ff7f00, #ffff00, #00ff00, #0000ff);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
  100% {
    background: linear-gradient(45deg, #ff0000, #ff7f00, #ffff00, #00ff00, #0000ff, #4b0082, #9400d3);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
  }
}

